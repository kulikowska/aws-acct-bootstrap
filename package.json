{
  "name": "aws-acct-bootstrap",
  "version": "0.1.0",
  "bin": {
    "aws-acct-bootstrap": "bin/aws-acct-bootstrap.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "cross-env AWS_REGION=us-west-2 AWS_PROFILE=awsist-dev jest",
