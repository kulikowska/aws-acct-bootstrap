    "validate": "ts-node scripts/validate.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/aws-lambda": "^8.10.131",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "aws-cdk": "2.118.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.118.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
